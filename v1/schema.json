{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": ["scripts"],
  "properties": {
    "scripts": {
      "$id": "#/properties/scripts",
      "type": "array",
      "title": "The Scripts Schema",
      "items": {
        "$id": "#/properties/scripts/items",
        "type": "object",
        "title": "The Items Schema",
        "required": [
          "name",
          "description",
          "tags",
          "author",
          "homepage",
          "repository",
          "versions"
        ],
        "properties": {
          "name": {
            "$id": "#/properties/scripts/items/properties/name",
            "type": "string",
            "title": "The Name Schema",
            "default": "",
            "examples": ["improved-pov"],
            "pattern": "^(.*)$"
          },
          "description": {
            "$id": "#/properties/scripts/items/properties/description",
            "type": "string",
            "title": "The Description Schema",
            "default": "",
            "examples": [
              "Improved PoV (Point of View) camera handling in Virt-A-Mate"
            ],
            "pattern": "^(.*)$"
          },
          "tags": {
            "$id": "#/properties/scripts/items/properties/tags",
            "type": "array",
            "title": "The Tags Schema",
            "items": {
              "$id": "#/properties/scripts/items/properties/tags/items",
              "type": "string",
              "title": "The Items Schema",
              "default": "",
              "examples": ["possession", "person"],
              "pattern": "^(.*)$"
            }
          },
          "author": {
            "$id": "#/properties/scripts/items/properties/author",
            "type": "object",
            "title": "The Author Schema",
            "required": ["name", "profile"],
            "properties": {
              "name": {
                "$id": "#/properties/scripts/items/properties/author/properties/name",
                "type": "string",
                "title": "The Name Schema",
                "default": "",
                "examples": ["Acidbubbles"],
                "pattern": "^(.*)$"
              },
              "profile": {
                "$id": "#/properties/scripts/items/properties/author/properties/profile",
                "type": "string",
                "title": "The Profile Schema",
                "default": "",
                "examples": ["https://github.com/acidbubbles"],
                "pattern": "^(.*)$"
              }
            }
          },
          "homepage": {
            "$id": "#/properties/scripts/items/properties/homepage",
            "type": "string",
            "title": "The Homepage Schema",
            "default": "",
            "examples": [
              "https://www.reddit.com/r/VAMscenes/comments/c8x6a2/improved_pov_20_possession_mode_feels_better_than/"
            ],
            "pattern": "^(.*)$"
          },
          "repository": {
            "$id": "#/properties/scripts/items/properties/repository",
            "type": "string",
            "title": "The Repository Schema",
            "default": "",
            "examples": ["https://github.com/acidbubbles/vam-improved-pov"],
            "pattern": "^(.*)$"
          },
          "versions": {
            "$id": "#/properties/scripts/items/properties/versions",
            "type": "array",
            "title": "The Versions Schema",
            "items": {
              "$id": "#/properties/scripts/items/properties/versions/items",
              "type": "object",
              "title": "The Items Schema",
              "required": ["version", "created", "files"],
              "properties": {
                "version": {
                  "$id": "#/properties/scripts/items/properties/versions/items/properties/version",
                  "type": "string",
                  "title": "The Version Schema",
                  "default": "",
                  "examples": ["2.0.4"],
                  "pattern": "^(.*)$"
                },
                "created": {
                  "$id": "#/properties/scripts/items/properties/versions/items/properties/created",
                  "type": "string",
                  "title": "The Created Schema",
                  "default": "",
                  "examples": ["2019-07-31"],
                  "pattern": "^(.*)$"
                },
                "files": {
                  "$id": "#/properties/scripts/items/properties/versions/items/properties/files",
                  "type": "array",
                  "title": "The Files Schema",
                  "items": {
                    "$id": "#/properties/scripts/items/properties/versions/items/properties/files/items",
                    "type": "object",
                    "title": "The Items Schema",
                    "required": ["filename", "url", "hash"],
                    "properties": {
                      "filename": {
                        "$id": "#/properties/scripts/items/properties/versions/items/properties/files/items/properties/filename",
                        "type": "string",
                        "title": "The Filename Schema",
                        "default": "",
                        "examples": ["ImprovedPoV.cs"],
                        "pattern": "^(.*)$"
                      },
                      "url": {
                        "$id": "#/properties/scripts/items/properties/versions/items/properties/files/items/properties/url",
                        "type": "string",
                        "title": "The Url Schema",
                        "default": "",
                        "examples": [
                          "https://github.com/acidbubbles/vam-improved-pov/releases/download/v2.0.4/ImprovedPoV.cs"
                        ],
                        "pattern": "^(.*)$"
                      },
                      "hash": {
                        "$id": "#/properties/scripts/items/properties/versions/items/properties/files/items/properties/hash",
                        "type": "object",
                        "title": "The Hash Schema",
                        "required": ["type", "value"],
                        "properties": {
                          "type": {
                            "$id": "#/properties/scripts/items/properties/versions/items/properties/files/items/properties/hash/properties/type",
                            "type": "string",
                            "title": "The Type Schema",
                            "default": "",
                            "examples": ["sha256"],
                            "pattern": "^(.*)$"
                          },
                          "value": {
                            "$id": "#/properties/scripts/items/properties/versions/items/properties/files/items/properties/hash/properties/value",
                            "type": "string",
                            "title": "The Value Schema",
                            "default": "",
                            "examples": [
                              "814E416E6D2F517A35ADFE21CBD9589BC9D8BE9C9911AABA97B40578C9EECCA6"
                            ],
                            "pattern": "^(.*)$"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
